<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <ImageView
                android:id="@+id/detail_bill_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow android:padding="5dp">
                <TextView
                    android:layout_width="150dp"
                    android:textStyle="bold"
                    android:text="@string/bill_table_id"
                    android:textSize="18dp"
                    android:textColor="@color/Black"
                    android:gravity="left"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/detail_bill_table_id"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:gravity="right"/>
            </TableRow>
            <TableRow android:padding="5dp">
                <TextView
                    android:layout_width="150dp"
                    android:textStyle="bold"
                    android:text="@string/bill_table_title"
                    android:textSize="18dp"
                    android:textColor="@color/Black"
                    android:gravity="left"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/detail_bill_table_title"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:gravity="right"/>
            </TableRow>
            <TableRow android:padding="5dp">
                <TextView
                    android:layout_width="150dp"
                    android:textStyle="bold"
                    android:text="@string/bill_table_type"
                    android:textSize="18dp"
                    android:textColor="@color/Black"
                    android:gravity="left"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/detail_bill_table_type"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:gravity="right"/>
            </TableRow>
            <TableRow android:padding="5dp">
                <TextView
                    android:layout_width="150dp"
                    android:textStyle="bold"
                    android:text="@string/bill_table_sponsor"
                    android:textSize="18dp"
                    android:textColor="@color/Black"
                    android:gravity="left"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/detail_bill_table_sponsor"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:gravity="right"/>
            </TableRow>
            <TableRow android:padding="5dp">
                <TextView
                    android:layout_width="150dp"
                    android:textStyle="bold"
                    android:text="@string/bill_table_chamber"
                    android:textSize="18dp"
                    android:textColor="@color/Black"
                    android:gravity="left"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/detail_bill_table_chamber"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:gravity="right"/>
            </TableRow>
            <TableRow android:padding="5dp">
                <TextView
                    android:layout_width="150dp"
                    android:textStyle="bold"
                    android:text="@string/bill_table_status"
                    android:textSize="18dp"
                    android:textColor="@color/Black"
                    android:gravity="left"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/detail_bill_table_status"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:gravity="right"/>
            </TableRow>
            <TableRow android:padding="5dp">
                <TextView
                    android:layout_width="150dp"
                    android:textStyle="bold"
                    android:text="@string/bill_table_date"
                    android:textSize="18dp"
                    android:textColor="@color/Black"
                    android:gravity="left"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/detail_bill_table_date"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:gravity="right"/>
            </TableRow>
            <TableRow android:padding="5dp">
                <TextView
                    android:layout_width="150dp"
                    android:textStyle="bold"
                    android:text="@string/bill_table_congressurl"
                    android:textSize="18dp"
                    android:textColor="@color/Black"
                    android:gravity="left"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/detail_bill_table_congressurl"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:gravity="right"/>
            </TableRow>
            <TableRow android:padding="5dp">
                <TextView
                    android:layout_width="150dp"
                    android:textStyle="bold"
                    android:text="@string/bill_table_version"
                    android:textSize="18dp"
                    android:textColor="@color/Black"
                    android:gravity="left"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/detail_bill_table_version"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:gravity="right"/>
            </TableRow>
            <TableRow android:padding="5dp">
                <TextView
                    android:layout_width="150dp"
                    android:textStyle="bold"
                    android:text="@string/bill_table_billurl"
                    android:textSize="18dp"
                    android:textColor="@color/Black"
                    android:gravity="left"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/detail_bill_table_billurl"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:gravity="right"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>