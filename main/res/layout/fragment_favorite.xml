<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TabHost
        android:id="@+id/tabhost_fav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="0dp"
        android:layout_marginRight="0dp">
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="60dp"></TabWidget>
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:paddingRight="0dp"
            android:layout_marginRight="0dp">
            <LinearLayout
                android:id="@+id/tab_fav_leg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:paddingRight="0dp"
                android:layout_marginRight="0dp"
                android:gravity="right">
                <ListView
                    android:id="@+id/list_fav_leg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:scrollbars="none">
                </ListView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tab_fav_bill"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ListView
                    android:id="@+id/list_fav_bill"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:scrollbars="none">
                </ListView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tab_fav_com"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ListView
                    android:id="@+id/list_fav_com"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:scrollbars="none">
                </ListView>
            </LinearLayout>
        </FrameLayout>
    </TabHost>
</LinearLayout>