            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="150dp"
                    android:textStyle="bold"
                    android:text="@string/leg_table_office"
                    android:textSize="18dp"
                    android:textColor="@color/Black"
                    android:gravity="left"
                    android:padding="3dp"/>
                <TextView />
                <TextView
                    android:id="@+id/detail_leg_table_office"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:gravity="right" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="150dp"
                    android:textStyle="bold"
                    android:text="@string/leg_table_state"
                    android:textSize="18dp"
                    android:textColor="@color/Black"
                    android:gravity="left"
                    android:padding="3dp"/>
                <TextView />
                <TextView
                    android:id="@+id/detail_leg_table_state"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:gravity="right" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="150dp"
                    android:textStyle="bold"
                    android:text="@string/leg_table_fax"
                    android:textSize="18dp"
                    android:textColor="@color/Black"
                    android:gravity="left"
                    android:padding="3dp"/>
                <TextView />
                <TextView
                    android:id="@+id/detail_leg_table_fax"
                    android:layout_weight="1"
                    android:textSize="18dp"
